[flake8]
max-line-length = 120
max-complexity = 12
ignore = E501,E225,W503,B008,E203, B010, B028
type-checking-pydantic-enabled = true
type-checking-fastapi-enabled = true
classmethod-decorators =
    classmethod
    validator
    root_validator
per-file-ignores =
    examples/*:SCS108
    examples/contrib/jwt/*:R504, SCS108
    starlite/dto/factory.py:TC004
    starlite/plugins/pydantic.py:TC004
    starlite/types/builtin_types.py:F401
    starlite/testing/test_client/*:SCS108
    starlite/types/callable_types.py:TC004
    starlite/types/composite_types.py:TC004
    starlite/types/internal_types.py:TC004
    tests/*:SCS108
